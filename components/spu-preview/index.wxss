/* components/spu-preview/index.wxss */
.container {
    width: 340rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 0 px6px rgba(221, 221, 221, 0.5);
    margin-bottom: 30rpx;

}

.content-container {
    display: flex;
    flex-direction: column;
}

.img {
    width: 100%;
    height: 360rpx;
}

.tags {
    display: flex;
    flex-direction: row;
    margin-bottom: 8rpx;
    margin-top: 6rpx;
    flex-wrap: wrap;
}

.l-tag {
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    margin-right: 5rpx;
}

.title {
    font-size: 28rpx;
    color: #333333;
}

.price-row {
    display: flex;
    flex-direction: row;
}

.price-margin {
    margin-right: 20rpx;
}

.subtitle {
    font-size: 24rpx;
    font-weight: 300;
    margin-top: 6rpx;
    color: #888;

}